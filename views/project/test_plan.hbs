      <div class="row">
        <div class="col-lg-8">
          <!-- Table data -->
          <h1 class="h3 mb-3 text-gray-800">All Plans</h1>
          

          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div
              class="card-header py-3 d-flex align-items-center justify-content-between"
            >
              <h6 class="m-0 font-weight-bold text-primary">
                Test plans
              </h6>
              <div class="action-button">
                <button
                  type="button"
                  class="btn btn-primary"
                  data-bs-toggle="modal"
                  data-bs-target="#staticBackdrop"
                >
                  Click here to add plan
                </button>

                <!-- Modal -->
                <div
                  class="modal fade"
                  id="staticBackdrop"
                  data-bs-backdrop="static"
                  data-bs-keyboard="false"
                  tabindex="-1"
                  aria-labelledby="staticBackdropLabel"
                  aria-hidden="true"
                >
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h1
                          class="modal-title fs-5"
                          id="staticBackdropLabel"
                        >
                          Test Case
                        </h1>
                        <button
                          type="button"
                          class="btn-close"
                          data-bs-dismiss="modal"
                          aria-label="Close"
                        ></button>
                      </div>
                      <div class="modal-body">
                        <form id="formTestCase">
                          <div class="row">
                            <div class="col-6 form-group">
                              <label for="">Name test plan</label>
                              <span class="text-danger">*</span>
                              <input
                                type="text"
                                class="form-control"
                                id="txtName"
                              />
                              <p
                                class="text-danger py-2 mb-0"
                                id="notiName"
                              ></p>
                            </div>
                            <div class="col-6 form-group">
                              <label for="">Hour plan</label>
                              <span class="text-danger">*</span>
                              <input
                                type="number"
                                class="form-control"
                                id="txtHour"
                              />
                              <p
                                class="text-danger py-2 mb-0"
                                id="notiHour"
                              ></p>
                            </div>
                            <div class="col-6 form-group">
                              <label for="">Description</label>
                              <span class="text-danger">*</span>
                              <input
                                type="text"
                                class="form-control"
                                id="txtDes"
                              />
                              <p
                                class="text-danger py-2 mb-0"
                                id="notiDes"
                              ></p>
                            </div>
                            <div class="col-6 form-group">
                              <label for="">Type</label>
                              <span class="text-danger">*</span>
                              <select
                                name=""
                                id="txtType"
                                class="form-control"
                              >
                                <option value="">
                                  Choose type you want
                                </option>
                                <option value="T1">Acceptance</option>
                                <option value="T2">Can Edit</option>
                                <option value="T3">Only view</option>
                                <option value="T4">Deny Access</option>
                              </select>
                              <p
                                class="text-danger py-2 mb-0"
                                id="notiType"
                              ></p>
                            </div>
                            <div class="col-6 form-group">
                              <label for="">Start date</label>
                              <span class="text-danger">*</span>
                              <input
                                type="date"
                                class="form-control"
                                id="txtDate"
                              />
                              <p
                                class="text-danger py-2 mb-0"
                                id="notiDate"
                              ></p>
                            </div>
                            <div class="col-6 form-group">
                              <label for="">Cost ($)</label>
                              <span class="text-danger">*</span>
                              <input
                                type="number"
                                class="form-control"
                                id="txtCost"
                              />
                              <p
                                class="text-danger py-2 mb-0"
                                id="notiCost"
                              ></p>
                            </div>
                          </div>
                        </form>
                      </div>
                      <div class="modal-footer">
