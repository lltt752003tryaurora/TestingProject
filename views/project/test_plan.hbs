<script>
  const loadTable = (testRuns) => {
    const table = document.getElementById('tbodyTestCase');
    const projectId = {{ projectId }};

    testRuns.forEach(testRun => {
      const row = document.createElement("tr");
      const id = document.createElement("td");
      const name = document.createElement("td");
      const description = document.createElement("td");
      const createdAt = document.createElement("td");
      const release = document.createElement("td");

      id.innerText = testRun.id;
      name.innerText = testRun.name;
      description.innerText = testRun.description;
      createdAt.innerText = new Date(testRun.createdAt);
      release.innerHTML = `<a href="/project/${projectId}/release/">${testRun.releaseId}</a>`;

      row.appendChild(id);
      row.appendChild(name);
      row.appendChild(description);
      row.appendChild(createdAt);
      row.appendChild(release);

      table.appendChild(row);
    });
  }

  const projectId = {{ projectId }};
  axiosAPI.get(`/api/projects/${projectId}/testPlans`)
    .then((response) => {
      const { testPlans } = response.data;
      console.log(testPlans);
      loadTable(testPlans);
    })
    .catch((err) => {
      console.log(err);
    })
</script>

